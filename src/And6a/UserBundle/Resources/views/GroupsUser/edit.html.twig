{% extends "And6aUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<header>
  <h1>Edition</h1>
</header>

<form action="{{ path('groups_update', { 'id': entity.id }) }}" method="post" class="form form-horizontal well" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form, {show_legend: 0}) }}

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Modifier</button>
        <a class="btn btn-danger">Supprimer</a>
    </div>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('groups') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('groups_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}