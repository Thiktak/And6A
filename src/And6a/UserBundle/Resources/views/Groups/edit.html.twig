{% extends "And6aUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<h1>Groups edit</h1>

<form action="{{ path('groups_update', { 'id': entity.id }) }}" method="post" class="form form-horizontal" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('groups') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('groups_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}