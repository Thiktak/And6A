{%if withLink %}
<a href="#user-{{user.id}}">
{%endif%}
  <figure class="user user-{{style|default('badge')}}">
    {% set avatar = user.avatar|default('bundles/and6auser/images/empty-avatar.png') %}
    <img src="{{ asset(avatar) }}" />
    <figcaption>
      <span class="name">{{user.username}}</span>
      <span class="fname">{#{user.fname}#}</span>
      <span class="class">{#{user.year}#}a {#{user.class.name|default('')}#}</span>
    </figcation>
  </figure>
{%if withLink %}
</a>
{%endif%}